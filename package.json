{
  "name": "imeandcursor",
  "displayName": "IME and Cursor",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:imeandcursor.switch",
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "imeandcursor.switch",
        "title": "切换输入法-中/英"
      }
    ],
    "keybindings":[
      {
        "command": "imeandcursor.switch",
        "key": "shift+space"
      }
    ],
    "configuration":{
      "title": "IME and Cursor",
      "properties": {
        "imeandcursor.EnglishIM": {
          "order": 1,
          "type": "string",
          "markdownDescription": "你的英语输入法ID。请参考：[这里](https://github.com/)",
          "default": "1033",
          "scope": "machine"
        },
        "imeandcursor.ChineseIM": {
          "order": 0,
          "type": "string",
          "markdownDescription": "你的中文输入法ID。请参考：[这里](https://github.com/)",
          "default": "2052",
          "scope": "machine"
        },
        "imeandcursor.switchIMCmd": {
          "order": 3,
          "type": "string",
          "description": "用于切换输入法的cmd/shell命令，{im}用作输入法ID的占位符",
          "default": "/path/to/im-select {im}",
          "scope": "machine"
        },
        "imeandcursor.obtainIMCmd": {
          "order": 2,
          "type": "string",
          "description": "用于获取输入法ID的cmd/shell命令",
          "default": "/path/to/im-select",
          "scope": "machine"
        },
        "imeandcursor.cursorStyle.English": {
          "type":"string",
          "default": "Line",
          "enum":["Line","Block","Underline","LineThin","BlockOutline","UnderlineThin"],
          "description": "英文输入法状态下的光标样式"
        },
        "imeandcursor.cursorStyle.Chinese": {
          "type":"string",
          "default": "Block",
          "enum":["Line","Block","Underline","LineThin","BlockOutline","UnderlineThin"],
          "description": "中文输入法状态下的光标样式"
        },
        "imeandcursor.cursorColor.English": {
          "type":"string",
          "default": "#00FF00",
          "description": "英文输入法状态下的光标十六进制(#RGB、#RGBA、#RRGGBB 或 #RRGGBBAA)颜色"
        },
        "imeandcursor.cursorColor.Chinese": {
          "type":"string",
          "default": "#FF0000",
          "description": "中文输入法状态下的光标十六进制(#RGB、#RGBA、#RRGGBB 或 #RRGGBBAA)颜色"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
