{
  "name": "imeandcursor",
  "displayName": "IME and Cursor",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:imeandcursor.switch",
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "imeandcursor.switch",
        "title": "切换输入法-中/英"
      }
    ],
    "keybindings":[
      {
        "command": "imeandcursor.switch",
        "key": "shift+enter"
      }
    ],
    "configuration":{
      "title": "IME and Cursor",
      "properties": {
        "imeandcursor.switcherLocation": {
          "type":"string",
          "default":"",
          "description": "第三方输入法切换工具的绝对路径"
        },
        "imeandcursor.cursorStyle.English": {
          "type":"string",
          "default": "line",
          "enum":["line","block","underline","line-thin","block-outline","underline-thin"],
          "description": "英文输入法状态下的光标样式"
        },
        "imeandcursor.cursorStyle.Chinese": {
          "type":"string",
          "default": "block-outline",
          "enum":["line","block","underline","line-thin","block-outline","underline-thin"],
          "description": "中文输入法状态下的光标样式"
        },
        "imeandcursor.cursorColor.English": {
          "type":"string",
          "default": "#00FF00",
          "description": "英文输入法状态下的光标十六进制(#RGB、#RGBA、#RRGGBB 或 #RRGGBBAA)颜色"
        },
        "imeandcursor.cursorColor.Chinese": {
          "type":"string",
          "default": "#FF0000",
          "description": "中文输入法状态下的光标十六进制(#RGB、#RGBA、#RRGGBB 或 #RRGGBBAA)颜色"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
